<Alloy>
   <Window class="container" statusBarStyle= "Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT">
		<View class="profileHeader">
			<Button id="back_button" class="topLeftButton headerButton" title="Back"/>
			<Label id = "editProfile" class = "editProfile" text = "Edit Profile"></Label>
			<Button id ="exit_button" class = "topRightButton headerButton"> Done</Button>
			<View id="profile_details_view">
				
			</View>
		</View>
		
		<ScrollView class ="bottom_view">
			<Label id = "question" class = "goals_question" text="What are your dating goals?" ></Label>
			<Label id = "pageNumber" class = "pageNumber" text="4 of 9" ></Label>
		
			<TextField id="user_goal_1" class='positive_thing_field' hintText="Type here"></TextField>
			<TextField id="user_goal_2" class='positive_thing_field' hintText="Type here"></TextField>
			<TextField id="user_goal_3" class='positive_thing_field'  hintText="Type here"></TextField>
		</ScrollView>
		  
		    
		<View class ="footer_buttons_view">
			<Button id ="next_button" class = "footer_next_button"> NEXT</Button>
		</View> 
	</Window>
</Alloy>