<Alloy>
	<Window class="container" statusBarStyle= "Titanium.UI.iPhone.StatusBar.LIGHT_CONTENT">
		<View class="profileHeader">
			<Button id="back_button" class="topLeftButton headerButton" title="Back"/>
			<Label id = "editProfile" class = "editProfile" text = "Edit Profile"></Label>
			<Button id ="exit_button" class = "topRightButton headerButton">Done</Button>
			<View id="profile_details_view"></View>
		</View>
		<ScrollView class ="bottom_view" id='fieldsView'>
			<Label id = "pageNumber" class = "pageNumber" text="" ></Label>
			<Button id='addLineButton'/>
				<Label id = "question" class = "profileQuestions" text="What are your deal breakers?" ></Label>
		</ScrollView>
		<View class ="footer_buttons_view">
			<Button id ="next_button" class = "footer_next_button">NEXT</Button>
		</View>
	</Window>
</Alloy>